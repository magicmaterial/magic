<%= provide(:title,"Update") %>
<div class = "login_form">
    <h1>更新</h1>
    <% @post.errors.full_messages.each do |message| %>
    <div class = "error_message">
    <%= message %>
    </div>
    <% end %>
    
    <%= form_tag("/post/#{@post.id}/update") do %>
    <div class = "login_content new_content">
        <textarea name = "content" value = "<%= @content %>"><%= @post.content %></textarea>
        <input type="submit" value="更新">
    </div>
    <% end %>
</div>
