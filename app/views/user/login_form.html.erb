<% provide(:title,"Login_form") %>
<% if @error_message %>
<div class = "error_message">
<%= @error_message %>
</div>
<% end %>
<div class = "form form_color">
    <%= form_tag("/login") do %>
    <div class = "login_form">
    <p class = "form-title">Login</p>
         <p>username</p>
         <p class = "username"><input value = "<%= @name %>" type = "text" name = "name" class = "login_text" maxlength="32" autocomplete="OFF" /></p>
         <p>email</p>
         <p class = "password"><input value = "<%= @email %>" type = "text" name = "email" class = "login_text" maxlength="32" autocomplete="OFF" /></p>
         <p class = "submit"><input type = "submit" value = "Enter" class="submit"></p>   
    </div>
    <% end %>
    
</div>