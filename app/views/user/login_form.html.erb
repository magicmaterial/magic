<% provide(:title,"Login_form") %>
<div class = "login_form">
    <h1>ログインする</h1>
    <% if @error_message %>
    <div class = "error_message">
        <%= @error_message %>
    </div>
    <% end %>
    <%= form_tag("/login") do %>
    <div class = "login_content">
        <P>名前</P>
        <input type = "text" name = "name" value = "<%= @name %>">
        <p>メールアドレス</p>
        <input type = "text" name = "email" value = "<%= @email %>">
        <p>パスワード</p>
        <input type = "text"><br />
        <input type = "submit" value = "ログイン">
    </div>
    <% end %>
</div>